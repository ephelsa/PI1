<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">55dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Complete">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="Button.Complete.Success">
        <item name="android:background">@drawable/button_complete_success</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextContent">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/textContent</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextTitle.CardView">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="Separator">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/separator</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextInformation">
        <item name="android:textColor">@color/textInformation</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="LocalNumber">
        <item name="android:textSize">48dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/textInformation</item>
    </style>

</resources>
